{
    "preset": "ts-jest",
    "testEnvironment": "node",
    "roots": [
        "<rootDir>/tests/contract"
    ],
    "testMatch": [
        "**/*.test.ts"
    ],
    "transform": {
        "^.+\\.ts$": [
            "ts-jest",
            {
                "tsconfig": "tsconfig.json"
            }
        ]
    },
    "verbose": true,
    "testTimeout": 30000,
    "displayName": "CONTRACT"
}