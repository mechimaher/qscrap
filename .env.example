# QScrap Environment Variables
# Copy this file to .env and fill in your values

# ===========================================
# REQUIRED - Server will fail without these
# ===========================================

# Database Configuration
DB_USER=postgres
DB_PASSWORD=your_secure_password_here
DB_NAME=qscrap_db
DB_HOST=localhost
DB_PORT=5432

# JWT Secret - MUST be at least 32 characters
# Generate with: openssl rand -base64 48
JWT_SECRET=your_super_secret_jwt_key_at_least_32_chars

# ===========================================
# OPTIONAL - Enhanced Features
# ===========================================

# Server Configuration
NODE_ENV=development
PORT=3000

# CORS Origins (comma-separated for production)
# CORS_ORIGINS=https://yourdomain.com,https://app.yourdomain.com

# OCR API (for VIN scanning)
# Get free key at: https://ocr.space/ocrapi/freekey
OCR_SPACE_API_KEY=

# Cloud Storage (leave empty for local storage)
# S3_BUCKET=
# S3_REGION=
# S3_ACCESS_KEY=
# S3_SECRET_KEY=

# Azure Storage (alternative to S3)
# AZURE_STORAGE_ACCOUNT=
# AZURE_STORAGE_KEY=
# AZURE_STORAGE_CONTAINER=

# Redis (for session management in production)
# REDIS_URL=redis://localhost:6379

# Database Replica (for read scaling)
# DB_READ_REPLICA_HOST=
# DB_READ_REPLICA_PORT=5432

# ===========================================
# PRODUCTION SCALING (1M+ Users)
# ===========================================

# Database Connection Pool
DB_POOL_MAX=50          # Increase to 100 for high traffic
DB_POOL_MIN=5           # Keep warm connections
DB_IDLE_TIMEOUT=30000   # Close idle after 30s
DB_CONNECT_TIMEOUT=5000 # Connection timeout 5s
DB_STATEMENT_TIMEOUT=30000  # Query timeout 30s

# Read Replica Pool (for dashboard/reports)
DB_READ_POOL_MAX=30

# SSL for cloud databases
DB_SSL=false            # Set to 'true' for AWS/Azure/GCP
