{
    "preset": "ts-jest",
    "testEnvironment": "node",
    "setupFilesAfterEnv": [
        "<rootDir>/src/jest.setup.ts"
    ],
    "roots": [
        "<rootDir>/src",
        "<rootDir>/tests"
    ],
    "testMatch": [
        "**/__tests__/**/*.test.ts",
        "**/?(*.)+(spec|test).ts"
    ],
    "testPathIgnorePatterns": [],
    "transform": {
        "^.+\\.ts$": [
            "ts-jest",
            {
                "isolatedModules": true
            }
        ]
    },
    "collectCoverageFrom": [
        "src/**/*.ts",
        "!src/**/*.d.ts",
        "!src/**/*.test.ts",
        "!src/**/*.spec.ts",
        "!src/jest.setup.ts",
        "!src/__tests__/**/*"
    ],
    "coverageThreshold": {
        "global": {
            "branches": 70,
            "functions": 70,
            "lines": 70,
            "statements": 70
        }
    },
    "coverageDirectory": "coverage",
    "verbose": true,
    "testTimeout": 30000,
    "coverageReporters": [
        "text",
        "lcov",
        "html",
        "clover"
    ],
    "moduleFileExtensions": [
        "ts",
        "tsx",
        "js",
        "jsx",
        "json",
        "node"
    ],
    "moduleNameMapper": {
        "^@/(.*)$": "<rootDir>/src/$1"
    }
}