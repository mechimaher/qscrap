{
    "expo": {
        "name": "QScrap Driver",
        "slug": "qscrap-driver",
        "version": "1.0.1",
        "orientation": "portrait",
        "icon": "./assets/icon.png",
        "userInterfaceStyle": "light",
        "newArchEnabled": true,
        "splash": {
            "image": "./assets/splash.png",
            "resizeMode": "contain",
            "backgroundColor": "#8D1B3D"
        },
        "notification": {
            "icon": "./assets/notification-icon.png",
            "color": "#C9A227",
            "androidMode": "default",
            "androidCollapsedTitle": "QScrap Driver"
        },
        "assetBundlePatterns": [
            "**/*"
        ],
        "ios": {
            "supportsTablet": true,
            "bundleIdentifier": "com.qscrap.driver",
            "infoPlist": {
                "NSLocationAlwaysAndWhenInUseUsageDescription": "QScrap Driver needs your location to show customers your position during deliveries.",
                "NSLocationWhenInUseUsageDescription": "QScrap Driver needs your location for navigation and delivery tracking.",
                "UIBackgroundModes": [
                    "location",
                    "fetch",
                    "remote-notification"
                ]
            }
        },
        "android": {
            "adaptiveIcon": {
                "foregroundImage": "./assets/adaptive-icon.png",
                "backgroundColor": "#8D1B3D"
            },
            "package": "com.qscrap.driver",
            "permissions": [
                "ACCESS_COARSE_LOCATION",
                "ACCESS_FINE_LOCATION",
                "ACCESS_BACKGROUND_LOCATION",
                "FOREGROUND_SERVICE",
                "FOREGROUND_SERVICE_LOCATION",
                "VIBRATE",
                "RECEIVE_BOOT_COMPLETED",
                "POST_NOTIFICATIONS"
            ],
            "useNextNotificationsApi": true
        },
        "plugins": [
            "expo-secure-store",
            [
                "expo-location",
                {
                    "locationAlwaysAndWhenInUsePermission": "QScrap Driver needs your location to show customers your position during deliveries.",
                    "isAndroidBackgroundLocationEnabled": true,
                    "isAndroidForegroundServiceEnabled": true
                }
            ],
            [
                "expo-notifications",
                {
                    "icon": "./assets/notification-icon.png",
                    "color": "#C9A227",
                    "defaultChannel": "assignments"
                }
            ],
            [
                "expo-camera",
                {
                    "cameraPermission": "QScrap Driver needs access to your camera to capture part condition photos.",
                    "microphonePermission": "QScrap Driver needs access to microphone for video recording."
                }
            ],
            [
                "expo-build-properties",
                {
                    "android": {
                        "compileSdkVersion": 35,
                        "targetSdkVersion": 35,
                        "minSdkVersion": 24,
                        "buildToolsVersion": "35.0.0",
                        "kotlinVersion": "2.1.20",
                        "usesCleartextTraffic": true
                    }
                }
            ]
        ],
        "extra": {
            "eas": {
                "projectId": "47b26c9d-3bd0-4470-8543-dd303a49b287"
            }
        }
    }
}